config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11g'
	option macaddr '04:f0:21:23:21:81'
	option htmode 'HT20'
	option country 'AT'
	option disabled '0'
	option channel '11'

#config wifi-iface 'default_radio1'
#	option device 'radio1'
#	option network 'lan'
#	option mode 'ap'
#	option disabled '0'
#	option ssid 'AndroidDeviceSecurityInternal'
#	option hidden '1'
#	option encryption 'psk2+ccmp'
#	option wpa_group_rekey '86400'
#	option key 'wifilab123'

config wifi-iface 'default_radio1'
        option device 'radio1'
        option network 'lan'
        option mode 'ap'
        option disabled '0'
	option ssid 'AndroidDeviceSecurityLab'
        option encryption 'wpa2+ccmp'
        option auth_server '127.0.0.1'
        option auth_secret 'testing123'
        option acct_server '127.0.0.1'
        option acct_secret 'testing123'
        option acct_interval 600
        option dynamic_vlan '2'
	option vlan_file '/etc/config/hostapd1.vlan'
	option isolate '1'

# ARGH
# https://bugs.openwrt.org/index.php?do=details&task_id=488
# ath10k doesn't support AP/VLAN right now :(
config wifi-iface 'guest_iface_0'
	option disabled '1'
	option device 'radio0'
	option mode 'ap'
	option ssid 'AndroidDeviceSecurityLab'
	option network 'guest_turris'
	option encryption 'wpa2+ccmp'
	option auth_server '127.0.0.1'
	option auth_secret 'testing123'
	option acct_server '127.0.0.1'
	option acct_secret 'testing123'
	option acct_interval 60
	option dynamic_vlan '2'
	#option vlan_file /etc/config/hostapd0.vlan
        #option 'vlan_tagged_interface' 'eth0'
	#option 'vlan_bridge' 'br-vlan'
        #option 'vlan_naming' '1'
	option wpa_group_rekey '86400'
	option ifname 'guest_turris_0'
	option isolate '1'

# UNCLEAR WHY VLAN TAGGING DOESN'T WORK ON GUEST AP BUT WORKS ON MAIN AP ABOVE
config wifi-iface 'guest_iface_1'
	option disabled '1'
	option device 'radio1'
	option mode 'ap'
	option ssid 'AndroidDeviceSecurityLab'
	option network 'guest_turris'
	option encryption 'wpa2+ccmp'
	option auth_server '127.0.0.1'
        option auth_secret 'testing123'
	option acct_server '127.0.0.1'
        option acct_secret 'testing123'
        option acct_interval 60
	option dynamic_vlan '2'
        #option 'vlan_tagged_interface' 'guest_turris_1'
        #option 'vlan_bridge' 'guest_turris'
        option 'vlan_naming' '1'
	option wpa_group_rekey '86400'
	option ifname 'guest_turris_1'
	option isolate '1'

