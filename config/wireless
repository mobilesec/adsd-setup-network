
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11a'
	option macaddr '04:f0:21:24:16:3d'
	option htmode 'VHT80'
	option country 'AT'
	option disabled '0'
	option channel 'auto'

config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option disabled '0'
	option ssid 'AndroidDeviceSecurityInternal'
	option hidden '1'
	option encryption 'psk2+ccmp'
	option wpa_group_rekey '86400'
	option key 'wifilab123'

